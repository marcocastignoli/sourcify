{
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "staging"
    }
  },
  "packages": [".", "ui", "packages/*"],
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
